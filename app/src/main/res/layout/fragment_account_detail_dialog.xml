<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
                android:layout_marginTop="?attr/toolbarStyle">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="@dimen/DefaultLayoutMargin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/ibPhotoAdmin"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <EditText
                        android:id="@+id/etNameAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/hintName"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>

                    <EditText
                        android:id="@+id/etAddressAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/hintAddress"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>
                    <EditText
                        android:id="@+id/etPhoneAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/hintPhone"
                        android:inputType="text|phone"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>
                    <EditText
                        android:id="@+id/etEmailAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/hintEmail"
                        android:inputType="textEmailAddress"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>

                    <EditText
                        android:id="@+id/etSocialReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/SReason"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>

                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/ciudad"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>

                    <EditText
                        android:id="@+id/etStoreDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:hint="@string/storeDescription"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/rubik_variablefont_wght"/>

                    <Button
                        android:id="@+id/btSaveChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/primaryTextColor"
                        android:layout_marginTop="@dimen/DefaultLayoutMargin"
                        android:text="@string/btSaveChanges"
                        android:fontFamily="@font/rubik_variablefont_wght"
                        android:background="@drawable/my_button_up"
                        android:elevation="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
